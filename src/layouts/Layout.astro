---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" style="scrollbar-gutter: stable;">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link rel="preconnect" href="https://graph.instagram.com" />
        <link rel="preconnect" href="https://scontent.cdninstagram.com" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Fraunces:wght@700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --pink: #ff6b9d;
        --yellow: #ffd93d;
        --mint: #6bcb77;
        --blue: #4d96ff;
        --coral: #ff8364;
        --black: #1a1a1a;
        --white: #fffef9;
        --gray: #666;
    }

    body {
        font-family: "DM Sans", sans-serif;
        background: var(--white);
        color: var(--black);
        line-height: 1.6;
    }

    /* Nav */
    nav {
        display: flex;
        align-items: center;
        padding: 1.5rem 2rem;
        border-bottom: 2px solid #2b9ab9;
    }

    .nav-logo {
        width: 96px;
        height: 96px;
        border-radius: 50%;
        object-fit: cover;
    }

    .nav-links {
        display: flex;
        gap: 3rem;
        margin-left: 3rem;
    }

    nav a {
        font-family: "Fraunces", serif;
        font-size: 1.1rem;
        font-weight: 700;
        text-decoration: none;
        color: #2b9ab9;
        position: relative;
        transition: color 0.2s;
    }

    nav a::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 3px;
        background: #c0b9ee;
        transition: width 0.3s ease;
    }

    nav a:hover::after {
        width: 100%;
    }

    /* Main content */
    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 2rem;
    }

    /* Section headings */
    .section-text {
        font-family: "Fraunces", serif;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
        color: var(--black);
    }

    .section-body {
        max-width: 700px;
        margin: 0 auto 2rem;
        text-align: center;
        color: var(--gray);
        line-height: 1.7;
    }

    .section-body p + p {
        margin-top: 1rem;
    }

    /* Instagram grid sections */
    .instagram-section {
        margin-bottom: 4rem;
    }

    .instagram-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 1rem;
    }

    /* Instagram placeholder items */
    .insta-item {
        aspect-ratio: 1;
        background: #ede9e1;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        opacity: 0.9;
        transition:
            transform 0.2s,
            opacity 0.2s;
    }

    .insta-item a {
        display: contents;
    }

    .insta-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .insta-item:hover {
        transform: scale(1.02);
        opacity: 1;
    }

    /* Footer */
    footer {
        border-top: 2px solid #2b9ab9;
        padding: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .footer-instagram {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        color: var(--black);
        font-weight: 500;
        transition: color 0.2s;
    }

    .footer-instagram:hover {
        color: #c0b9ee;
    }

    .footer-instagram svg {
        width: 24px;
        height: 24px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .instagram-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .section-text {
            font-size: 1.5rem;
        }

        nav {
            gap: 2rem;
        }
    }
</style>
